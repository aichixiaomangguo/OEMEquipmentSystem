<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorChildOdd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain">

        <ImageView
            android:id="@+id/img_add_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_sign_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加设备"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="IMEI         :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_imei"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="2133454235235334235"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="型号         :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_model"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="HTC A9W"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="系统         :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_os"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="4.0.3"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="CPU         :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_cpu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="八核"
                android:textColor="@color/colorPurple"
                android:singleLine="true"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="分辨率     :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_resolution"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="720*1080"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="运行内存 :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_memory"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="16GB"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="存储空间 :"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_add_storage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="16GB"
                android:textColor="@color/colorPurple"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center">

        <com.example.baidu.oemequipmentsystem.equip.ui.custom.SpinnerButton
            android:id="@+id/btn_add_responsible"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/btn_selector_main"
            android:text="责任人"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <com.example.baidu.oemequipmentsystem.equip.ui.custom.SpinnerButton
            android:id="@+id/btn_add_source"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_selector_main"
            android:gravity="center"
            android:text="来源"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <com.example.baidu.oemequipmentsystem.equip.ui.custom.SpinnerButton
            android:id="@+id/btn_add_state"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_selector_main"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_add_submit"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_selector_main"
        android:text="提交"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />


</LinearLayout>